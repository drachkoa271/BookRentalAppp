@model BookRentalApp.Models.Loan

@{
    ViewData["Title"] = "Delete Loan";
}

<h2>Delete Loan</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Loan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Book ID
        </dt>
        <dd class="col-sm-10">
            @Model.BookId
        </dd>
        <dt class="col-sm-2">
            User ID
        </dt>
        <dd class="col-sm-10">
            @Model.UserId
        </dd>
        <dt class="col-sm-2">
            Loan Date
        </dt>
        <dd class="col-sm-10">
            @Model.LoanDate
        </dd>
        <dt class="col-sm-2">
            Return Date
        </dt>
        <dd class="col-sm-10">
            @Model.ReturnDate
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
